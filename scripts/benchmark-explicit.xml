<?xml version="1.0"?>
<!DOCTYPE benchmark SYSTEM "benchmark.dtd">

<benchmark tool="cpachecker" timelimit="180" memlimit="10240">
	
	<option name="-setprop">output.disable=true</option>
	<option name="-heap">8000m</option>
	<option name="-entryfunction">main</option>
	<option name="-explicitAnalysis"></option>

<!--	<test name="explicit">
		<sourcefiles>
                      <includesfile>test/programs/benchmarks/ControlFlowInteger.set</includesfile>
		</sourcefiles>
	</test>
-->
	<test name="explicit_cegar">
        	<option name="-setprop">analysis.useRefinement=true</option>
        	<option name="-setprop">cegar.refiner=cpa.explicit.ExplicitRefiner</option>
            <sourcefiles>
                    <includesfile>test/programs/benchmarks/Concurrency.set</includesfile>
                    <includesfile>test/programs/benchmarks/ControlFlowInteger.set</includesfile>
                    <includesfile>test/programs/benchmarks/HeapManipulation.set</includesfile>
                    <includesfile>test/programs/benchmarks/SystemC.set</includesfile>
            </sourcefiles>
            <sourcefiles>
                    <includesfile>test/programs/benchmarks/DeviceDrivers.set</includesfile>
            </sourcefiles>
            <sourcefiles>
                    <includesfile>test/programs/benchmarks/DeviceDrivers64.set</includesfile>
            <option name="-setprop">cpa.predicate.machineModel=Linux64</option>
            </sourcefiles>
	</test>

	<columns>
		<column title="total">time for CPAchecker</column>
		<column title="reached">reached set</column>
                <column title="refinements">Number of refinements</column>
                <column title="refinements_succ">Number of successful refinements</column>
                <column title="refinements_fail">Number of failed refinements</column>
                <column title="time_refinements">Time for refinements</column>
	</columns>
</benchmark>
