<?xml version="1.0"?>
<!DOCTYPE benchmark SYSTEM "benchmark.dtd">
<benchmark tool="smack" timelimit="900" hardtimelimit="930" memlimit="15000" cpuCores="8">

  <require cpuCores="8"/>
  <resultfiles>**.[!b]*</resultfiles>
  <propertyfile>${sourcefile_path}/ALL.prp</propertyfile>

  <option name="--errorwitness">witness.graphml</option>

    <sourcefiles name="simple">
      <include>../programs/benchmarks/recursive-simple/*.c</include>
    </sourcefiles>
    
    <sourcefiles name="sv">
      <includesfile>../programs/benchmarks/Recursive.set</includesfile>
    </sourcefiles>
  
  <rundefinition name="smack-recursive"></rundefinition>

</benchmark>
