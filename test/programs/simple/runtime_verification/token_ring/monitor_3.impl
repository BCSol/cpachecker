unsigned compute_successor(unsigned state, std::string op) {
	if(op == "t1_started") {
		if(state == 0) {
			state = 1;
		}			
		else if(state == 1 || state == 12 || state == 13) {
			printf("ERROR: error location is reachable\n");
			exit(EXIT_FAILURE);
		}
		else if(state == 2) {
			state = 12;
		}
		else if(state == 3) {
			state = 13;
		}
		else if(state == 23) {
			state = 0;
		}
	}
	else if(op == "t2_started") {
		if(state == 0) {
			state = 2;
		}			
		else if(state == 2 || state == 12 || state == 23) {
			printf("ERROR: error location is reachable\n");
			exit(EXIT_FAILURE);
		}
		else if(state == 1) {
			state = 12;
		}
		else if(state == 3) {
			state = 23;
		}
		else if(state == 13) {
			state = 0;
		}
	}
	else if(op == "t3_started") {
		if(state == 0) {
			state = 3;
		}			
		else if(state == 3 || state == 13 || state == 23) {
			printf("ERROR: error location is reachable\n");
			exit(EXIT_FAILURE);
		}
		else if(state == 1) {
			state = 13;
		}
		else if(state == 2) {
			state = 23;
		}
		else if(state == 12) {
			state = 0;
		}
	}
	return state;
}
