unsigned get_initial_state() {
	return 0;
}

unsigned compute_successor(unsigned state, std::string op) {
	if(op == "t1_started") {
		if(state == 0) {
			state = 1;
		}			
		else if(state == 1) {
			printf("ERROR: error location is reachable\n");
			exit(EXIT_FAILURE);
		}
		else if(state == 2) {
			state = 0;
		}
	}
	else if(op == "t2_started") {
		if(state == 0) {
			state = 2;
		}			
		else if(state == 2) {
			printf("ERROR: error location is reachable\n");
			exit(EXIT_FAILURE);
		}
		else if(state == 1) {
			state = 0;
		}
	}
	return state;
}
