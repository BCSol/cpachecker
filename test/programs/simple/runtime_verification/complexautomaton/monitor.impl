unsigned compute_successor(unsigned state, std::string op) {
	if (op == "init") {
		state = 1;
	} else if (op == "lock") {
		if (state == 0) {
			printf("ERROR: error location is reachable\n");
			exit(EXIT_FAILURE);		
		} else if (state == 1) {
			state = 2;
		}
	} else if (op == "unlock") {
		if (state != 2) {
			printf("ERROR: error location is reachable\n");
			exit(EXIT_FAILURE);		
		}
		state = 1;
	}
	return state;
}
