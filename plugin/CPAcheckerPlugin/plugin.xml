<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<extension-point id="listeners" name="Test Listeners" />
	<extension point="org.sosy_lab.cpachecker.plugin.eclipse.listeners">
	<listener
		class="org.sosy_lab.cpachecker.plugin.eclipse.Listener">
		</listener>
	</extension> 
	<extension point="org.eclipse.ui.views">
		<category
			name="CPAchecker"
			id="org.sosy_lab.cpachecker.plugin.eclipse.catMain">
		</category>
		<view
			name="CPAchecker Tasks View"
			category="org.sosy_lab.cpachecker.plugin.eclipse.catMain"
			class="org.sosy_lab.cpachecker.plugin.eclipse.views.TasksView"
			id="org.sosy_lab.cpachecker.plugin.eclipse.views.TasksView">
		</view>
	</extension>
	<extension point="org.eclipse.ui.newWizards">
      <category
            name="CPAchecker"
            id="org.sosy_lab.cpachecker.plugin.eclipse.catMain">
      </category>
      <wizard
            name="new CPAchecker Task"
            icon="$nl$/icons/sample.gif"
            class="org.sosy_lab.cpachecker.plugin.eclipse.wizards.NewTaskCreationWizard"
            id="org.sosy_lab.cpachecker.plugin.eclipse.wizards.NewTaskCreationWizard">
         <description>
            new CPAchecker Task
         </description>
      </wizard>
   </extension>
    <extension
         point="org.eclipse.ui.editors">
      <editor
            name="Property File GUI Editor"
            icon="icons/config32.gif"
            extensions="properties"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            class="org.sosy_lab.cpachecker.plugin.eclipse.editors.propertieseditor.PropertiesEditor"
            id="org.sosy_lab.cpachecker.plugin.eclipse.editors.propertieseditor.PropertiesEditor">
      </editor>  	
      	<editor
            name="Automaton Editor"
            extensions="auto"
            icon="icons/sample.gif"
            default="true"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            class="org.sosy_lab.cpachecker.plugin.eclipse.editors.automatoneditor.AutomatonEditor"
            id="org.sosy_lab.cpachecker.plugin.eclipse.editors.automatoneditor.AutomatonEditor">
      	</editor>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="org.sosy_lab.cpachecker.plugin.eclipse.popupmenu"
            objectClass="org.eclipse.cdt.core.model.ITranslationUnit">
         <menu
               id="org.sosy_lab.cpachecker.plugin.eclipse.CFilesMenu"
               label="CPAchecker"
               path="additions">
            <separator
                  name="group1">
            </separator>
         </menu>
         <action
               class="org.sosy_lab.cpachecker.plugin.eclipse.popup.actions.DefaultCheckAction"
               enablesFor="1"
               id="org.sosy_lab.cpachecker.plugin.eclipse.popup.actions.DefaultCheckAction"
               label="run Default Check"
               menubarPath="org.sosy_lab.cpachecker.plugin.eclipse.CFilesMenu/group1">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="CPAPlugin"
            class="org.sosy_lab.cpachecker.plugin.eclipse.preferences.CPAPreferencePage"
            id="org.sosy_lab.cpachecker.plugin.eclipse.preferences.CPAPreferencePage">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.sosy_lab.cpachecker.plugin.eclipse.preferences.PreferenceInitializer">
      </initializer>
   </extension>
</plugin>
