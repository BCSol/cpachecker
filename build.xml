<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="build" name="CPAchecker">
    <property environment="env"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.6"/>
    <property name="source" value="1.6"/>
    <path id="org.eclipse.pde.core.requiredPlugins.libraryclasspath"/>
    <path id="CPAchecker.classpath">
        <pathelement location="bin"/>
        <fileset dir="lib" includes="**/*.jar"/>
    </path>
    <target name="init">
        <mkdir dir="bin"/>
	<!-- seems not to be necessary
	<copy includeemptydirs="false" todir="bin">
            <fileset dir="src" excludes="**/*.launch, **/*.java"/>
	</copy>
	-->
    </target>
    <target name="clean">
        <delete dir="bin"/>
    </target>
    <target depends="clean" name="cleanall"/>
    <target depends="build-subprojects,build-project" name="build"/>
    <target name="build-subprojects">
	    <ant antfile="src/cpa/observeranalysis/observerBuild.xml" inheritAll="false"/>
	    <ant antfile="src/fql/frontend/parser/build.xml" inheritAll="false"/>
    </target>

    <target depends="init" name="build-project">
        <echo message="${ant.project.name}: ${ant.file}"/>
        <javac debug="true" debuglevel="${debuglevel}" destdir="bin" source="${source}" target="${target}">
            <src path="src"/>
	    <exclude name="cpaplugin/**"/>
            <classpath refid="CPAchecker.classpath"/>
        </javac>
    </target>
</project>
